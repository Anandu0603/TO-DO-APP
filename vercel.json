{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/index.mjs",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/index.mjs": {
      "includeFiles": "backend/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.mjs" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
